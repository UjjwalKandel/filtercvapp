<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="UTF-8">
    {% load static %}
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Text&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{% static 'filtercv/bootstrap5.1.0/bootstrap.css' %}">

    <!-- Custom Style -->
    <link rel="stylesheet" href="{% static 'filtercv/custom.css' %}">

    {% block css %}
    {% endblock css %}

    <title>
        filterCV {% if title %} - {{ title }} {% endif %}
    </title>
</head>
<body>
    {% include 'filtercv/header.j2'%}

    <section>
        {% block content %}
        {% endblock content %}
    </section>

    {% include 'filtercv/footer.j2'%}


    {% load static %}
    <!-- Bootstrap js -->
    <script src="{% static 'filtercv/bootstrap5.1.0/bootstrap.bundle.js' %}"></script>
    <script src="https://unpkg.com/@popperjs/core@2"></script>


    <script>
        const csrfmiddlewaretoken = "{{ csrf_token }}"
    </script>

    {% block javascript %}
    {% endblock javascript %}

</body>

</html>